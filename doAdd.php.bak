   <?php
// 执行留言信息添加操作

// 1.获取要添加的留言信息，并且补上其他辅助消息（IP地址，添加时间）


$name = $_POST["name"]; // 获取留言者
$phone = $_POST["phone"]; // 电话
$address = $_POST["address"]; // 电话
$fengge = $_POST["huxing"]; // 留言内容
$fengge = $_POST["fengge"]; // 留言内容
$yusuan = $_POST["yusuan"]; // 留言内容
$email = $_POST["email"]; // 留言内容

$ip = $_SERVER["REMOTE_ADDR"]; // IP地址
$addtime = time(); // 添加时间 （时间戳的格式）

// 2.拼装（组装）留言信息
$ly = "{$name}##{$phone}##{$address}##{$huxing}##{$fengge}##{$yusuan}##{$email}##{$ip}##{$addtime}@@@";

// 3.将留言信息追加到liuyan.txt文件中
$info = file_get_contents("liuyan.txt"); // 获取所有以前的留言
file_put_contents("liuyan.txt", $info . $ly); // 覆盖式的写入，会对原有数据进行覆盖
  Header("Location:dengjiok.php");
?>